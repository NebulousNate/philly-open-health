%p#notice= notice

%p
  %b Title:
  = @dataset.title
%p
  %b Description:
  = @dataset.description
%p
  %b Creation date:
  = @dataset.createdate

= if @attachments
  %p
    %b Attachments:
    = @attachments.each do |attachment|
      %p attachment

= form_for @attachment do |f|
  = f.filepicker_field :url, dragdrop: true
  = f.submit

= link_to 'Edit', edit_dataset_path(@dataset)
\|
= link_to 'Back', datasets_path
